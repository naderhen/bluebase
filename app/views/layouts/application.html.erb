<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bigblue</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <% if Rails.env == 'development' %>
      <%= stylesheet_link_tag    "application", :media => "all" %>
      <%= javascript_include_tag "application" %>
    <% else %>
      <link href="/assets/application.css" media="all" rel="stylesheet" type="text/css">
      <script src="/assets/application.js" type="text/javascript"></script>
    <% end %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= params[:controller] %>">
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
        	<a class="brand pull-left" href="#">Big Blue Oceans LLC.</a>
          <ul class="nav">
            <li><a href="/home">Dashboard</a></li>
            <li><a href="/inventory">Inventory</a></li>
          </ul>
          
          <ul class="nav pull-right">
            <li><%= switch_user_select %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">User<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <%= render 'shared/navigation' %>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div id="container" class="container-fluid">
      <div id="main" role="main">
          <%- flash.each do |name, msg| -%>
            <div class="alert alert-info">
              <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
            </div>
          <%- end -%>
        <%= yield %>
      </div>
    </div> <!--! end of #container -->
<div pub-key="pub-e42fbe0f-2e60-40c8-a292-281c19a0517c" sub-key="sub-d36b0514-7db8-11e1-ba7f-97e084cb3142" ssl="off" origin="pubsub.pubnub.com" id="pubnub"></div>
<script src="http://cdn.pubnub.com/pubnub-3.1.min.js"></script>
<script>(function(){

    // LISTEN FOR MESSAGES
    PUBNUB.subscribe({
        channel    : "main",
        restore    : false,  
        callback   : function(message) { // RECEIVED A MESSAGE.
            console.log(message)
        },
        disconnect : function() {
            console.log(
                "Connection Lost." +
                "Will auto-reconnect when Online."
            )
        },
        reconnect  : function() {
            console.log("And we're Back!")
        },
        connect    : function() {
            PUBNUB.publish({
                channel : "main",
                message : "Connected to BlueStats Network"
            })

        }
    });

})();</script>
  </body>
</html>